<%
var orientation = orientation || "horizontal"
var reversed = reversed || "false"
var selection = selection || "before"
var min = min || "0"
var max = max || "1"
var step = step || "0.01"
var value = value || "0"
var id = id || ''
var tooltip = tooltip || 'show'
%>

<input type="number"
       data-provide="slider"
       data-slider-orientation="<%- orientation %>"
       data-slider-reversed="<%- reversed %>"
       data-slider-selection="<%- selection %>"
       data-slider-min="<%- min %>"
       data-slider-max="<%- max %>"
       data-slider-step="<%- step %>"
       data-slider-value="<%- value %>"
       data-slider-tooltip="<%= tooltip %>"
       />
